{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/control-panel/src",
  "monorepo": true,
  "root": "apps/control-panel",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/tsconfig.app.json"
  },
  "projects": {
    "control-panel": {
      "type": "application",
      "root": "apps/control-panel",
      "entryFile": "main",
      "sourceRoot": "apps/control-panel/src",
      "compilerOptions": {
        "tsConfigPath": "apps/control-panel/tsconfig.app.json"
      }
    },
    "boat": {
      "type": "library",
      "root": "libs/boat",
      "entryFile": "index",
      "sourceRoot": "libs/boat/src",
      "compilerOptions": {
        "tsConfigPath": "libs/boat/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "users": {
      "type": "library",
      "root": "libs/users",
      "entryFile": "index",
      "sourceRoot": "libs/users/src",
      "compilerOptions": {
        "tsConfigPath": "libs/users/tsconfig.lib.json"
      }
    },
    "mailman": {
      "type": "library",
      "root": "libs/mailman",
      "entryFile": "index",
      "sourceRoot": "libs/mailman/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mailman/tsconfig.lib.json"
      }
    }
  }
}
